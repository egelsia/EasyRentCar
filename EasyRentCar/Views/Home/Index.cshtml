@using EasyRentCar.Models.EntityFramework
@model List<CAR>
@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid fruite py-5">
    <div class="container py-5">
        <div class="p-5 bg-light rounded text-center" style="padding-top : 20px">
            <div class="row g-4">
                <div class="text-center mx-auto" style="max-width: 700px;">
                    <h1 class="text-primary">Random Cars</h1>
                    <p class="mb-4">You can browse our cars from Cars page.</p>
                </div>
            </div>
            <div class="tab-content">
                <div class="row g-4">
                    <div class="col-lg-12">
                        <div class="row g-4">
                            @foreach (var car in Model)
                            {
                                <div class="col-md-6 col-lg-4 col-xl-3">
                                    <a href="@Url.Action("Details", "Car", new {id = car.CAR_ID})" style="display:flex; justify-content: space-between">
                                        <div class="rounded position-relative fruite-item" style="background-color: #fff">

                                            <div class="fruite-img">
                                                <img src="~/Content/img-not-available.jpg" class="img-fluid w-100 rounded-top" alt="">
                                            </div>
                                            <div class="text-white bg-secondary px-1 rounded position-absolute" style="top: 10px; left: 10px;">@(car.CAR_TRANSMISSION == true ? "Automatic" : "Manuel")</div>
                                            <div class="text-white bg-primary px-1 rounded position-absolute" style="top: 10px; right: 10px;">@car.CAR_FUEL</div>
                                            <div class="p-4 border border-secondary border-top-0 rounded-bottom">
                                                <h5 class="fw-bold">@car.CAR_BRAND</h5>
                                                <p>@car.CAR_MODEL</p>
                                                <div class="justify-content flex-lg-wrap" style="text-align:center">
                                                    <p class="text-dark fs-5 fw-bold" style="text-align:center">$@car.CAR_PRICE</p>
                                                </div>
                                            </div>

                                        </div>
                                    </a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

